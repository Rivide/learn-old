extends ../layout

block content
    h1#title=title

    form(method='POST' action='')
        label(for='title') Title:
        input#title(type='text' name='title'
                value=(course === undefined ? '' : course.title))

        ul#article-list
            if articles
                each article in articles
                    li
                        label(for='title') Title:
                        input#title(type='text' name='title'
                            value=article.title)
                        label(for='body') Body:
                        textarea#body(name='body' rows=8)
                            #{article.body}
        button#append-button(type='button') Add new article

        template#article-form
            label(for='title') Title:
            input.field(type='text' name='articleTitle0')
            br
            label(for='body') Body:
            textarea.field(name='articleBody0' rows=8)
        div#test test
        button(type='submit') Submit